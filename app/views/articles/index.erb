<div class="card-content">
  <% @articles.each do |article| %>
    <h1 class="is-size-3"><%= link_to article.title, article %></h1>
    <div>
      <p class="is-size-6">
        <%= article.body %>
      </p>
    </div>
  <%end %>
  <div class="column is-one-quarter top-space">
    <%= will_paginate @articles %>
  </div>
</div>

