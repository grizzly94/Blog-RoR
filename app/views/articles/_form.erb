<% name ||="Crear" %>
<%= form_for(@article) do |f| %>
  <h1 class="is-size-3 top-space"><%= name %> artículo</h1>
  <% @article.errors.full_messages.each do |message| %>
    <div class="be-red white top-space">
      *<%= message %>
    </div>
  <%end %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Título del artículo" , class:"form-control"%>
  </div>
  <div class="field">
    Portada: <%= f.file_field :cover %>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: "Escribe aquí el artículo", sytle:"height:250px;",class:"form-control" %>
  </div>
  <div class="field">

    <label>Categorías</label>
    <% @categories.each do |category| %>
      <div class="field">
        <%= check_box_tag "article[category_ids][]", category.id %> <%=category.name %>
      </div>
    <%end %>
  </div>
  <div class="field">
    <%= f.submit "Guardar", class:"button is-primary" %>
  </div>
<%end%>